                <input type="text" class="form-control" id="email" name="email" placeholder="email">


                <div class="div_bnt_registrarPermiso">
                    <button class=" btn btn-primary  bnt_registrarPermiso" type="submit">Registrar</button>
                </div>

                <br>


            </form>
        </fieldset>



    </div>
</div>