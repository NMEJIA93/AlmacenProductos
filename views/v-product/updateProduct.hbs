<body>
    <div class="cuerpoIndex">
        <div class="cuerpo-derecho">

            <ul class="lista-derecho">
                <li><a href="http://localhost:8080/products">Registrar</a></li>
                <li><a href="">Buscar</a></li>
                <li><a href="/update_product">Actualizar</a></li>
                <li><a href="">Eliminar</a></li>
            </ul>
        </div>


        <div class="cuerpo-izquierdo">
            <form class="Form_Update" action="/find_product" method="post" style="width:500px;">
                <table class="table_form_Update">
                    <tr></tr>
                    <td style="padding:0px;" class="td_Update"><input type="text" id="refProducto" name="refProducto"
                            placeholder="Referencia del Producto" value="{{resp.refProducto}}">
                    </td>
                    <td align="left" class="td_Update"><button type="submit" class="btn btn-primary">Consultar</button>
                    </td>
                </table>
            </form>

            <div class="cuerpo-izquierdo">

                <fieldset class="fieldset" ;
                    style=" margin:auto 10%; width:600px; border: 1px solid rgba(12, 97, 131, 0.774); ">
                    <legend style="color:  rgba(12, 97, 131, 1);">Actualizar Producto</legend>
                    <form class="formulario_permiso" action="/update_product{{!-- ?__method=PUT --}}" method="POST"
                        style="width:500px;">

                        <input type="text" class="form-control" id="nomProducto" name="nomProducto"
                            placeholder="nomProducto" value="{{resp.nomProducto}}">
                        <input type="text" class="form-control" id="refProducto" name="refProducto"
                            placeholder="refProducto" value="{{resp.refProducto}}" readonly>

                        <input type="text" class="form-control" id="categoriaProducto" name="categoriaProducto"
                            placeholder="categoriaProducto" value="{{resp.categoriaProducto}}">
                        <input type="number" class="form-control" id="valorUnitario" name="valorUnitario"
                            placeholder="valorUnitario" value="{{resp.valorUnitario}}">
                        {{!-- <input type="text" class="form-control" id="refProducto" name="refProducto"
                            placeholder="refProducto"> --}}
                        <input type="text" class="form-control" id="marca" name="marca" placeholder="marca"
                            value="{{resp.marca}}">
                        <input type="text" class="form-control" id="modelo" name="modelo" placeholder="modelo"
                            value="{{resp.modelo}}">
                        <textarea name="descripcion" id="descripcion" class="form-control"
                            placeholder="descripcion">{{resp.descripcion}}</textarea>

                        <div class="div_bnt_registrarPermiso">
                            <button class=" btn btn-primary  bnt_registrarPermiso" type="submit">Registrar</button>
                        </div>

                        <br>


                    </form>
                </fieldset>
            </div>
        </div>
        <script src="resources/js/localStorage.js"></script>

</body>

